<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name = "Car" table = "samochody">

        <meta attribute = "class-description">
            This class contains the car detail.
        </meta>

        <id name = "id" type = "int" column = "id">
            <generator class="native"/>
        </id>
        <property name = "cat_id" column = "id_kategorii" type = "int"/>
        <property name = "brand" column = "marka" type = "string"/>
        <property name = "model" column = "model" type = "string"/>
        <property name = "engine" column = "silnik" type = "string"/>
        <property name = "rented" column = "wypozyczony" type = "boolean"/>

    </class>
</hibernate-mapping>