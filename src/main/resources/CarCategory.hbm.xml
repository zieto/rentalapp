<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name = "CarCategory" table = "kategoria_samochod">

        <meta attribute = "class-description">
            This class contains the car category detail.
        </meta>

        <id name = "id" type = "int" column = "id">
            <generator class="native"/>
        </id>

        <property name = "admin_id" column = "opiekun_kategorii" type = "int"/>
        <property name = "name" column = "nazwa_kategorii" type = "string"/>
        <property name = "desc" column = "opis" type = "string"/>

    </class>
</hibernate-mapping>