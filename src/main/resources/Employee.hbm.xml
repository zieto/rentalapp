<?xml version = "1.0" encoding = "utf-8"?>
        <!DOCTYPE hibernate-mapping PUBLIC
                "-//Hibernate/Hibernate Mapping DTD//EN"
                "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
<class name = "Employee" table = "pracownicy">

    <meta attribute = "class-description">
        This class contains the employee detail.
    </meta>

    <id name = "id" type = "int" column = "id">
        <generator class="native"/>
    </id>

    <property name = "firstName" column = "imie" type = "string"/>
    <property name = "lastName" column = "nazwisko" type = "string"/>
    <property name = "telephone" column = "telefon" type = "string"/>
    <property name = "salary" column = "wynagrodzenie" type = "int"/>

</class>
</hibernate-mapping>